@{
    ViewBag.Title = "Login";
    Layout = null;
}
@using Santhos.Web.Mvc.BootstrapFlashMessages
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login page</title>    
    <link href="~/Content/Account/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Account/css/nifty.min.css" rel="stylesheet" />
    <link href="~/Content/Account/css/style-blog.css" rel="stylesheet" />
    <link href="~/Content/Account/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>    
    
    <style>
        .cls-content {
            width: 25%;
            min-width: 270px;
            margin: 0 auto;
            position: relative;
            padding-top: 0;
        }

        .panel {
            box-shadow: 0 2px 0 rgba(0,0,0,0.05);
            border-radius: 0;
            border: 0;
            margin-bottom: 24px;
            background-color: #fff;
        }

        .main {
            margin-top: 100px;
        }

        body {
            background: url("../../../../Content/Account/bg-img-2.jpg") no-repeat left top;            
        }
    </style>    
</head>
<body>
    <div class="main">
        <div class="cls-content panel">
            <div class="panel-body">
                <h2 class="text-center">Sign In</h2>
                <div class="col-lg-12">
                    @Html.FlashMessages(true)
                </div>
                <form method="post">          
                    @Html.AntiForgeryToken()          
                    @Html.ValidationSummary(true)
                    <div>
                        <label for="username">User Name*</label>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" id="username" name="username" value="@Request.Unvalidated["username"]"/>
                        @Html.ValidationMessage("username")
                    </div>
                    <div>
                        <label for="password">Password*</label>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" id="password" name="password" />
                        @Html.ValidationMessage("password")
                    </div>
                    <div class="form-group">
                        <input class="form-inline" type="checkbox" name="rememberMe" value="true"/>
                        <label for="rememberMe">Remember Me</label>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Login" title="Login" />
                        <a class="btn btn-link" name="login" href="#">Lost Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
